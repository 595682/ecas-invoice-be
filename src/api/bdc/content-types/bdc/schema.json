{
  "kind": "collectionType",
  "collectionName": "bdcs",
  "info": {
    "singularName": "bdc",
    "pluralName": "bdcs",
    "displayName": "bdc",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "emissor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "statusComments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::status-comment.status-comment"
    },
    "encodingNumber": {
      "type": "string"
    },
    "accountingCode": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::accounting-code.accounting-code"
    },
    "project": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::project.project"
    },
    "vatType": {
      "type": "enumeration",
      "enum": [
        "deductible",
        "nonDeductible",
        "proRata"
      ]
    },
    "expenseType": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::expense-type.expense-type"
    },
    "expenseTypeComments": {
      "type": "string"
    },
    "dateOfInvoice": {
      "type": "date"
    },
    "submissionDate": {
      "type": "date"
    },
    "paymentDeadline": {
      "type": "date"
    },
    "paymentDate": {
      "type": "date"
    },
    "notes": {
      "type": "text"
    },
    "totalAmount": {
      "type": "float"
    },
    "compiledDocument": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "pendingApproval",
        "approved",
        "rejected",
        "changeRequested",
        "void"
      ]
    },
    "deleted": {
      "type": "boolean",
      "default": false
    },
    "annexes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::attachment.attachment"
    },
    "concepts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::concept.concept"
    },
    "requiredSignatures": {
      "displayName": "signatures",
      "type": "component",
      "repeatable": true,
      "component": "bdc.signatures"
    },
    "isCompiling": {
      "type": "boolean"
    }
  }
}
